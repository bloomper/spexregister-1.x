<div id="userDialog">
  <table>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.username' %>
      </td>
      <td>
        <%= h @user.username %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.user_groups' %>
      </td>
      <td>
      	<% @user.user_groups.collect(|ug| t("user_group.name.#{ug.name.downcase}")).to_sentence %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.login_count' %>
      </td>
      <td>
        <%= h @user.login_count %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.failed_login_count' %>
      </td>
      <td>
        <%= h @user.failed_login_count %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.last_request_at' %>
      </td>
      <td>
        <%= h @user.last_request_at %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.current_login_at' %>
      </td>
      <td>
        <%= h @user.current_login_at %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.last_login_at' %>
      </td>
      <td>
        <%= h @user.last_login_at %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.current_login_ip' %>
      </td>
      <td>
        <%= h @user.current_login_ip %>
      </td>
    </tr>
    <tr>
      <td>
        <%= t 'activerecord.attributes.user.last_login_ip' %>
      </td>
      <td>
        <%= h @user.last_login_ip %>
      </td>
    </tr>
    <%= render :partial => '/shared/entity_details', :locals => { :entity => @user } %>
  </table>
</div>
