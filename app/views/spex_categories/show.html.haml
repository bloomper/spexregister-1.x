= render :partial => 'sub_menu'

%h1= t('views.function_category.page_title_html', :action => t('views.base.viewing_action'), :description => @spex_category.name) + ' ' + link_to(icon_tag('edit'), edit_resource_url(@spex_category))

%table.show
  %tr
    %th= t 'activerecord.attributes.spex_category.name'
  %tr
    %td= h @spex_category.name

%table.show
  %tr
    %th= t 'activerecord.attributes.spex_category.first_year'
  %tr
    %td= h @spex_category.first_year

%table.show
  %tr
    %th= t 'activerecord.attributes.spex_category.logo'
  %tr
    - if @spex_category.logo?
      %td= link_to(image_tag(@spex_category.logo.url(:thumb)), @spex_category.logo.url, :class => 'fancybox-single')
    - else
      %td= t 'views.base.missing_image'

= render :partial => '/shared/entity_details', :locals => {:entity => @spex_category}
= render :partial => '/shared/back_links', :locals => { :url => filter_url_if_not_compatible_with(previous_page, collection_url) }
