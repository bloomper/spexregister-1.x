#header
  .left.span-20
    %h1.logo
      = t 'views.base.title'
  .right.span-11
    - if current_user
      %ul#login-details
        %li
          = t 'views.base.logged_in_as'
          = current_user.username
        %li
          = link_to t('views.base.logout'), logout_path
  #progress
    = image_tag 'progress.gif'
    = t('views.base.loading')
