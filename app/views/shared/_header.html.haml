#header
  #logo
    = image_tag 'logo.png'
  #title
    %h1= t('views.base.title')
  #details
    - if current_user
      %ul#login-details
        %li
          = link_to t('views.base.logout'), logout_path
        %li
          = t 'views.base.logged_in_as'
        %li
          = truncate(current_user.username, :length => 50)
  #progress-indicator
    = image_tag 'progress.gif'
    = t('views.base.loading')
