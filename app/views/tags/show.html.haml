= render :partial => 'sub_menu'

%h1= t('views.tag.page_title_html', :action => t('views.base.viewing_action'), :description => @tag.name) + ' ' + link_to(icon_tag('edit'), edit_resource_url(@tag))

%table.show
  %tr
    %th= t 'activerecord.attributes.tag.name'
  %tr
    %td= h @tag.name

= render :partial => '/shared/entity_details', :locals => {:entity => @tag}
= render :partial => '/shared/back_links', :locals => { :url => filter_url_if_not_compatible_with(previous_page, collection_url) }
