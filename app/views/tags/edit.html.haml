= render :partial => 'sub_menu'

%h1= t 'views.tag.page_title_html', :action => t('views.base.editing_action'), :description => @tag.name

- form_for @tag, :url => resource_url, :html => { :method => :put } do |f|
  = render :partial => 'form', :locals => { :f => f }
  = render :partial => '/shared/edit_resource_links', :locals => { :url => filter_url_if_not_compatible_with(previous_page, collection_url) }
