#login
  %h1
    = t 'views.user_session.title'
  - form_for @user_session, :url => user_session_path do |f|
    %p
      = f.label :username, t('activerecord.attributes.user.username')
      %br>
      = f.text_field :username, :class => 'title'
    %p
      = f.label :password, t('activerecord.attributes.user.password')
      %br>
      = f.password_field :password, :class => 'title'
    %p
      %label
        = f.check_box :remember_me
        = f.label :remember_me, t('views.user_session.remember_me')
    %p
      = f.submit t('views.user_session.login'), :class => 'button primary'
  %p
    = link_to t('views.user_session.create_new_account'), new_signup_path
    |
    = link_to t('views.user_session.forgot_my_password'), new_password_reset_path
  