= render :partial => 'sub_menu'

%div.left
  %h1= t 'views.spex.page_title', :action => t('views.base.editing_action'), :description => @spex.title

= render :partial => '/shared/export_menu', :locals => { :reports => get_available_reports, :entity_ids => [@spex.id] }

- form_for @spex, :url => resource_url, :html => { :method => :put, :multipart => true } do |f|
  = render :partial => 'form', :locals => { :f => f }
  = render :partial => '/shared/edit_resource_links', :locals => { :url => filter_url_if_not_compatible_with(previous_page, collection_url) }
