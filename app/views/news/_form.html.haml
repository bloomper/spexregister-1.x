%div
  - f.field_container :subject do
    = f.label :subject, t('activerecord.attributes.news.subject')
    %span.required= t 'views.base.mandatory_attribute'
    %br>
    = f.error_message_on :subject
    = f.text_field :subject, :class => 'fullwidth'
  - f.field_container :publication_date do
    = f.label :publication_date, t('activerecord.attributes.news.publication_date')
    %span.required= t 'views.base.mandatory_attribute'
    %br>
    = f.error_message_on :publication_date
    = f.text_field :publication_date, :class => 'datepicker'
  - f.field_container :body do
    = f.label :body, t('activerecord.attributes.news.body')
    %span.required= t 'views.base.mandatory_attribute'
    %br>
    %small= t('views.news.markdown_notice', :markdown_link => link_to('Markdown', 'http://daringfireball.net/projects/markdown/syntax', :popup => true))
    %br>
    = f.error_message_on :body
    = f.text_area :body
  - f.field_container :is_published do
    = f.label :is_published, t('activerecord.attributes.news.is_published')
    = f.error_message_on :is_published
    = f.check_box :is_published
