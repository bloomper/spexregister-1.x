<div id="newsDialog">
  <table>
    <tr>
      <td>
        <label for="news_publication_date"><%= t 'activerecord.attributes.news.publication_date' %></label>
      </td>
      <td>
      	<%= form.text_field :publication_date, :tabindex => 1, :maxlength => 10 %>
      </td>
    </tr>
    <tr>
      <td>
        <label for="news_subject"><%= t 'activerecord.models.news.subject' %></label>
      </td>
      <td>
        <%= form.text_field :subject, :tabindex => 2, :maxlength => 85 %>
      </td>
    </tr>
    <tr>
      <td>
        <label for="news_body"><%= t 'activerecord.models.news.body' %></label>
      </td>
      <td>
        <%= form.text_area :body, :tabindex => 3 %>
      </td>
    </tr>
    <% if action == 'edit' %>
      <%= render :partial => '/shared/entity_details', :locals => { :entity => @news } %>
      <tr>
        <td>
          <%= submit_tag(t 'views.base.action_edit', :tabindex => 3, :class => 'button') %>
          <input type="button" value="<%= t 'views.base.action_back' %>" class="button" tabindex="4" onclick="javascript:history.go(-1);"/>
          <input type="reset" value="<%= t 'views.base.action_reset' %>" class="button" tabindex="5"/>
        </td>
      </tr>
    <% else %>
      <tr>
        <td>
          <%= submit_tag(t 'views.base.action_create', :tabindex => 3, :class => 'button') %>
          <input type="reset" value="<%= t 'views.base.action_reset' %>" tabindex="4"/>
        </td>
      </tr>
    <% end %>
  </table>

<script>$("news_subject").focus();</script>

</div>

