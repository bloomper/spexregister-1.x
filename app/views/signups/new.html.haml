#signup
  %h1
    = t 'views.signup.title'
  = error_messages_for :user, :header_message => nil
  %p
    = t 'views.signup.instructions'
  - form_tag signups_path do
    %p
      = label_tag :full_name, t('activerecord.attributes.other.full_name')
      %br>
      = text_field_tag :full_name, nil, :class => 'title'
    %p
      = label_tag :username, t('activerecord.attributes.user.username')
      %br>
      = text_field_tag :username, nil, :class => 'title'
    %p
      = label_tag :password, t('activerecord.attributes.user.password')
      %br>
      = password_field_tag :password, nil, :class => 'title'
    %p
      = label_tag :password_confirmation, t('activerecord.attributes.user.password_confirmation')
      %br>
      = password_field_tag :password_confirmation, nil, :class => 'title'
    %p
      = label_tag :description, t('activerecord.attributes.other.description') + ' ' + t('views.signup.description_note') 
      %br>
      = text_area_tag :description, nil, :class => 'title'
    %p
      = submit_tag t('views.signup.create_my_account'), :class => 'button primary'
